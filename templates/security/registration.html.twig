{% extends 'base.html.twig' %}

{% block title %} Login {% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1>Register</h1>

        {{ form_start(form) }}
        <div class="form-group">
            <label for="">Username</label>
            {{ form_widget(form.username)}}
        </div>
        <div class="form-group">
            <label for="">Email</label>
            {{ form_widget(form.email)}}
            <div class="invalid-feedback">{{ form_errors(form.email) }}</div>
        </div>
        <div class="form-group">
            <label for="">Password</label>
            {{ form_widget(form.password)}}
            <div class="invalid-feedback">{{ form_errors(form.password) }}</div>
            
        </div>
        <div class="form-group">
            <label for="">Confirm password</label>
            {{ form_widget(form.confirm_password)}}
            <div class="invalid-feedback">{{ form_errors(form.confirm_password) }}</div>
        </div><br>
        <button type="submit" class="btn btn-success">Register</button>
        {{ form_end(form)}}

{% endblock %}